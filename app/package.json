  "scripts": {
    "start": "node -r dotenv/config --harmony server.js",
    "dev": "nodemon -r dotenv/config --harmony server.js",
    "doc": "apidoc -i src/api/ -o ./public",
    "pretest": "eslint --fix src/** server.js",
    "test-travis": "./node_modules/istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha -- -r dotenv/config -R spec --recursive ./tests --timeout 15000",
    "test": "mocha --timeout 2000 -r dotenv/config --reporter mochawesome --recursive ./tests",
    "prepublishOnly": "mocha -r dotenv/config --timeout 2000 --recursive ./tests"
  },
  "main": "server.js",
  "engines": {
    "node": ">=8.3.x",
    "npm": ">=5.x"
  },
  "apidoc": {
    "title": "API Boundle",
    "version": "1.1.2",
    "description": "Documentation for API Boundle of ECS Microservice",
    "url": "http://localhost:8080",
    "sampleUrl": "http://localhost:8080"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "es6-promisify": "^5.0.0",
