    "koa-router": "^7.2.1",
    "koa2-static-files": "^1.0.4",
    "mongodb": "^2.2.31"
  },
  "devDependencies": {
    "chakram": "^1.5.0",
    "coveralls": "^3.0.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.8.0",
    "eslint-plugin-async-await": "0.0.0",
    "istanbul": "^0.4.5",
    "jscoverage": "^0.6.0",
    "mocha": "^3.5.3",
    "mochawesome": "^2.3.1",
    "nodemon": "^1.12.1",
    "winston": "^2.4.0"
